<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/appBackgroundColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorTextToolbar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimations</item>
    </style>

    <style name="Widget.AcmeDroid.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorToolbar</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="titleTextColor">@color/colorTextToolbar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
        <item name="titleTextAppearance">@style/TextAppearance.AcmeDroid.Toolbar</item>
    </style>

    <style name="TextAppearance.AcmeDroid.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ActivityAnimations" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/appBackgroundColor</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="WeightDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@color/appBackgroundColor</item>
        <item name="windowMinWidthMajor">0dp</item>
        <item name="windowMinWidthMinor">0dp</item>
    </style>

    <style name="WorkoutAgentMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorOnSurface">@color/appBackgroundColor</item>
        <item name="colorSurface">@color/appBackgroundColor</item>
        <item name="materialAlertDialogTitleTextStyle">@style/WorkoutAgentMaterialDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/WorkoutAgentMaterialDialogBodyTextStyle</item>
    </style>

    <style name="WorkoutAgentMaterialDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/colorTextBodyAlertDialog</item>
    </style>

    <style name="WorkoutAgentMaterialDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorTextTitleAlertDialog</item>
    </style>

    <style name="TransparentDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowMinWidthMajor">0dp</item>
        <item name="windowMinWidthMinor">0dp</item>
    </style>

    <style name="WorkoutAgentActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorTextFab</item>
        <item name="backgroundTint">@color/colorFab</item>
    </style>

    <style name="WorkoutAgentActionButtonSmall" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorTextFab</item>
        <item name="backgroundTint">@color/colorFab</item>
    </style>

    <style name="WorkoutAgentButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="tint">@color/colorIconButton</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="backgroundTint">@color/colorButton</item>
    </style>

    <style name="WorkoutAgentButtonDark" parent="@style/Widget.MaterialComponents.Button">
        <item name="tint">@color/colorIconButtonDark</item>
        <item name="android:textColor">@color/colorTextButtonDark</item>
        <item name="backgroundTint">@color/colorButtonDark</item>
    </style>

    <style name="WorkoutAgentDeleteButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="tint">@color/colorIconDeleteButton</item>
        <item name="android:textColor">@color/colorTextDeleteButton</item>
        <item name="backgroundTint">@color/colorDeleteButton</item>
    </style>

    <style name="WorkoutAgentCardProfile" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardViewProfile</item>
    </style>

    <style name="WorkoutAgentBottomNavigation" parent="@style/Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/bottomNavColor</item>
    </style>

    <style name="WorkoutAgentTab" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@color/colorBackgroundTab</item>
        <item name="tabSelectedTextColor">@color/colorTextSelectedTab</item>
        <item name="tabIndicatorColor">@color/colorTextSelectedTab</item>
    </style>

    <style name="WorkoutAgentCardRoutines" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardViewRoutines</item>
    </style>

    <style name="WorkoutAgentPositiveFAB" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorTextFab</item>
        <item name="backgroundTint">@color/colorSmallPositiveButton</item>
    </style>

    <style name="WorkoutAgentNegativeFAB" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/colorTextFab</item>
        <item name="backgroundTint">@color/colorSmallNegativeButton</item>
    </style>

</resources>
