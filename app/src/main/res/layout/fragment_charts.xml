<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:padding="9dp" />

        <TextView
            android:id="@+id/ideal_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:id="@+id/current_imc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/texto1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18.5"
                app:layout_constraintEnd_toStartOf="@+id/linea2"
                app:layout_constraintStart_toEndOf="@+id/linea1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/texto2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                app:layout_constraintEnd_toStartOf="@+id/linea3"
                app:layout_constraintStart_toEndOf="@+id/linea2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/texto3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29.9"
                app:layout_constraintEnd_toStartOf="@+id/linea4"
                app:layout_constraintStart_toEndOf="@+id/linea3"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/linea1"
                android:layout_width="90dp"
                android:layout_height="5dp"
                android:background="@color/chartBlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/texto1" />

            <TextView
                android:id="@+id/linea2"
                android:layout_width="80dp"
                android:layout_height="5dp"
                android:background="@color/chartGreen"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linea1" />

            <TextView
                android:id="@+id/linea3"
                android:layout_width="60dp"
                android:layout_height="5dp"
                android:background="@color/chartYellow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linea2" />

            <TextView
                android:id="@+id/linea4"
                android:layout_width="80dp"
                android:layout_height="5dp"
                android:background="@color/chartOrange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linea3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>