<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.tfg.workoutagent.presentation.ui.profile.customer.viewModels.EditProfileCustomerViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.profile.customer.fragments.EditProfileCustomerFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/edit_profile_customer_image_selected"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="64dp"
                app:civ_border_color="#FFB3B2B2"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toTopOf="@+id/edit_profile_customer_email_input"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                app:layout_constraintHorizontal_bias="0.519"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.102" />

            <ImageButton
                android:id="@+id/edit_profile_customer_button_select_image_customer"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="64dp"
                android:contentDescription="@string/form_user_content_desc_photo"
                android:src="@drawable/ic_add_a_photo_white_24dp"
                app:layout_constraintBottom_toTopOf="@+id/edit_profile_customer_email_input"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.181" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_profile_customer_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_profile_customer_name_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:hint="@string/form_user_name_hint"
                        android:nextFocusRight="@+id/edit_profile_customer_surname_input_edit"
                        android:singleLine="true"
                        android:text="@={viewModel.name}" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_profile_customer_surname_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_profile_customer_surname_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/form_user_surname_hint"
                        android:nextFocusRight="@+id/edit_profile_customer_phone_input_edit"
                        android:singleLine="true"
                        android:text="@={viewModel.surname}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edit_profile_customer_phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconDrawable="@drawable/ic_phone_black_24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_profile_customer_phone_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/form_user_phone_hint"
                        android:nextFocusRight="@+id/edit_profile_customer_email_input_edit"
                        android:singleLine="true"
                        android:text="@={viewModel.phone}" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_profile_customer_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:startIconDrawable="@drawable/ic_email_black_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_profile_customer_email_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/form_user_email_hint"
                    android:nextFocusRight="@+id/edit_profile_customer_dni_input_edit"
                    android:singleLine="true"
                    android:text="@={viewModel.email}" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_profile_customer_dni_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_customer_email_input"
                app:startIconDrawable="@drawable/ic_contact_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_profile_customer_dni_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/form_user_dni_hint"
                    android:nextFocusRight="@+id/edit_profile_customer_birthday_input_edit"
                    android:singleLine="true"
                    android:text="@={viewModel.dni}" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_height_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_customer_dni_input"
                app:startIconDrawable="@drawable/ic_person_height_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_height_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:autofillHints=""
                    android:digits="1234567890"
                    android:hint="@string/customer_height_input"
                    android:inputType="number"
                    android:maxLength="3"
                    android:nextFocusRight="@+id/customer_height_input_edit"
                    android:singleLine="true"
                    android:text="@={`` + viewModel.height}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.949"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edit_profile_customer_birthday_input" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edit_profile_customer_birthday_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customer_height_input"
                app:startIconDrawable="@drawable/ic_cake_black_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_profile_customer_birthday_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/form_user_birthday_input"
                    android:nextFocusRight="@+id/edit_profile_update_customer_button"
                    android:singleLine="true"
                    android:text="@={viewModel.birthday}" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/birthday_error_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/design_default_color_error"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/edit_profile_update_customer_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/edit_profile_update_customer_button"
                style="@style/WorkoutAgentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:drawableLeft="@drawable/ic_refresh_48dp"
                android:onClick="@{() -> viewModel.onSave()}"
                android:text="@string/update"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="@+id/delete_customer_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_customer_birthday_input" />

            <Button
                android:id="@+id/delete_customer_button"
                style="@style/WorkoutAgentDeleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_delete_white_48dp"
                android:text="@string/delete"
                android:textColorLink="#FFFFFF"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_profile_update_customer_button"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>