<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.ui.profile.trainer.fragments.ProfileTrainerFragment">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewTrainer_displayProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_border_color="#FFB3B2B2"
            android:layout_marginVertical="20dp"
            app:civ_border_width="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/settings_image_profile_trainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="164dp"
            android:src="@drawable/ic_settings_grey_28dp"
            app:layout_constraintBottom_toTopOf="@+id/card_view"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/display_trainer_name_displayProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/card_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleImageViewTrainer_displayProfile"
            app:layout_constraintVertical_bias="1.0" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view"
            style="@style/WorkoutAgentCardProfile"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleImageViewTrainer_displayProfile">

            <LinearLayout
                android:id="@+id/ll_details_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="4dp"
                android:paddingTop="4dp"
                android:paddingEnd="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/display_trainer_dni_displayProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:drawableStart="@drawable/ic_contact_24dp"
                    android:drawablePadding="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextCardViewProfile"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/display_trainer_phone_displayProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:drawableStart="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextCardViewProfile"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/display_trainer_email_displayProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="email"
                    android:drawableStart="@drawable/ic_email_black_24dp"
                    android:drawablePadding="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextCardViewProfile"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/display_trainer_birthday_displayProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_cake_black_24dp"
                    android:drawablePadding="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/colorTextCardViewProfile"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            app:layout_constraintVertical_bias="0.234">

            <Button
                android:id="@+id/display_trainer_button_curriculum"
                style="@style/WorkoutAgentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_resume_48dp"
                android:text="Curriculum"
                android:textSize="30sp" />

            <Button
                android:id="@+id/display_trainer_button_edit"
                style="@style/WorkoutAgentButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_edit_white_48dp"
                android:text="@string/edit"
                android:textSize="32sp" />

            <Button
                android:id="@+id/sign_out_button"
                style="@style/WorkoutAgentButtonDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_logout_white_48dp"
                android:text="@string/sign_out"
                android:textSize="32sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>