<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/sv_my_routine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@+id/recyclerViewRoutine">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_row_load" />

            <include layout="@layout/item_row_load" />

            <include layout="@layout/item_row_load" />

            <include layout="@layout/item_row_load" />

            <include layout="@layout/item_row_load" />

            <include layout="@layout/item_row_load" />

            <include layout="@layout/item_row_load" />

            <include layout="@layout/item_row_load" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


    <ScrollView
        android:id="@+id/scv_my_routine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".presentation.ui.routines.customer.fragments.MyRoutineCustomerFragment">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
    </ScrollView>
</FrameLayout>
</layout>