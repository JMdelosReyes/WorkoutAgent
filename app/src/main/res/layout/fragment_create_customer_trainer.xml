<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.tfg.workoutagent.presentation.ui.users.trainer.viewModels.CreateCustomerTrainerViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.users.trainer.fragments.DisplayCustomerTrainerFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="64dp"
                android:contentDescription="@string/form_user_content_desc_photo"
                android:src="@drawable/ic_add_a_photo_white_24dp"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                app:layout_constraintHorizontal_bias="0.47"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customer_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customer_name_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="71dp"
                        android:hint="@string/form_user_name_hint"
                        android:nextFocusRight="@+id/customer_surname_input_edit"
                        android:singleLine="true"
                        android:text="@={viewModel.name}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customer_surname_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customer_surname_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/form_user_surname_hint"
                        android:nextFocusRight="@+id/customer_phone_input_edit"
                        android:singleLine="true"
                        android:text="@={viewModel.surname}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customer_phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconDrawable="@drawable/ic_phone_black_24dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customer_phone_input_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/form_user_phone_hint"
                        android:nextFocusRight="@+id/customer_email_input_edit"
                        android:singleLine="true"
                        android:text="@={viewModel.phone}" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                app:startIconDrawable="@drawable/ic_email_black_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_email_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/form_user_email_hint"
                    android:nextFocusRight="@+id/customer_dni_input_edit"
                    android:singleLine="true"
                    android:text="@={viewModel.email}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_dni_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customer_email_input"
                app:startIconDrawable="@drawable/ic_contact_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_dni_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/form_user_dni_hint"
                    android:nextFocusRight="@+id/customer_birthday_input_edit"
                    android:singleLine="true"
                    android:text="@={viewModel.dni}" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/customer_birthday_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.818"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customer_dni_input"
                app:startIconDrawable="@drawable/ic_cake_black_24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/customer_birthday_input_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/form_user_birthday_input"
                    android:nextFocusRight="@+id/form_height_input_user"
                    android:singleLine="true"
                    android:text="@={viewModel.birthday}" />
            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/form_image_height_user"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginTop="12dp"
                android:contentDescription="Image height"
                app:layout_constraintEnd_toStartOf="@+id/form_height_input_user"
                app:layout_constraintHorizontal_bias="0.609"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customer_birthday_input"
                app:srcCompat="@drawable/ic_person_height_24dp" />

            <EditText
                android:id="@+id/form_height_input_user"
                android:layout_width="80dp"
                android:layout_height="63dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:digits="1234567890"
                android:hint="Height (cm)"
                android:inputType="number"
                android:maxLength="5"
                android:nextFocusRight="@+id/form_height_input_user"
                android:singleLine="true"
                android:text="@={`` + viewModel.height}"
                app:layout_constraintBottom_toBottomOf="@+id/form_image_kg_user"
                app:layout_constraintEnd_toStartOf="@+id/form_image_kg_user"
                app:layout_constraintTop_toBottomOf="@+id/customer_birthday_input"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/form_image_kg_user"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@+id/form_weight_input_user"
                app:layout_constraintTop_toBottomOf="@+id/customer_birthday_input"
                app:srcCompat="@drawable/ic_person_weight_24dp" />

            <EditText
                android:id="@+id/form_weight_input_user"
                android:layout_width="97dp"
                android:layout_height="63dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:digits=",.0123456789"
                android:hint="Weight (kg)"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:text="@={`` + viewModel.initialWeight}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customer_birthday_input" />

            <Button
                android:id="@+id/create_customer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ic_save_white_48dp"
                android:onClick="@{() -> viewModel.onSubmit()}"
                android:textSize="26sp"
                android:text="Save customer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.761"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/form_height_input_user"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>